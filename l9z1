# Завдання 2
function calculator(a,b){
    this.read=function(){
        this.a=prompt("Vvedite znachenie",0);
        this.b=prompt("Vvedite znachenie",0);
    },
    this.sum=function(){
        let sum;
        sum=this.a+this.b;
        return sum;
    },
    this.mul=function(){
        let mul;
        mul=this.a*this.b;
        return mul;
    }
}

let constr = new calculator(0,0);



function constructor(startingValue){
    this.startingValue=startingValue,
    Value=this.startingValue,
    this.add=function()
    {
        let newValue;
        newValue=prompt("Vvedite znachenie",0);
        this.Value=this.Value+this.newValue;
        return this;
    }
}

let pr = new constructor(15);

console.log(pr.add());
# Завдання 3
function Calc(a,b){
    this.read=function(){
        this.a=prompt("A:",0);
        this.b=prompt("B:",0);
    };
    this.sum=function(){
        let sum;
        sum=this.a+this.b;
        return sum;
    };
    this.mul=function(){
        let mul;
        mul=this.a*this.b;
        return mul;
    }
}
let x = new Calc();
console.log(sum)
console.log(mul)
