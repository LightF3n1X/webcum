# Завдання 1

let arr = [];
let a;
function push(){a = 0; while (a!=null) {a = prompt("enter number:"); arr.push(a)}}
push(a)
alert (arr);
let x = arr.length-1;
let sum = 0;
for (let i=0; i<x; i++){sum += (+arr[i]);}
console.log(sum);

# Завдання 2

let arr = [];
let a;
function push(){a = 0; while (a!=null) {a = prompt("enter number:"); arr.push(a)}}
push(a)
alert (arr);
let x = arr.length-1;
let sum = 0;
for (let i=0; i<x; i++){
  if (arr[i]>0){
  sum += (+arr[i]);}
  }
console.log(sum);
